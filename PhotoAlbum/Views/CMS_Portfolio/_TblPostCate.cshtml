@model List<CMSWebsite.Models.Web_CategoryPortfolio>

<table id="tblCategory" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên danh mục</th>
            <th>Danh mục cha</th>
            <th>Công cụ</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count != 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td>@item.ParentId</td>
                    <td>
                        <a href="#"><img src="~/Images/cms/icon/edit.png" onclick="editCate(@item.CategoryId,'@item.CategoryName',@item.ParentId)" width="25" height="25" title="Sửa" /></a>&nbsp;
                        <a href="#"><img src="~/Images/cms/icon/delete.png" onclick="deleteCate(@item.CategoryId)" width="25" height="25" title="Xóa" /></a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#tblCategory').DataTable(noneOptionDataTable);
    });
</script>
