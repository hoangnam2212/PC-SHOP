@model CMSWebsite.Models.DetailPostModel
@{
    ViewBag.Title = Model.Post.PostTitle;
    Layout = "~/Views/Shared/Web_MasterPage.cshtml";
}

<!-- breadcrumb_section - start
       ================================================== -->
<div class="breadcrumb_section">
    <div class="container">
        <ul class="breadcrumb_nav ul_li">
            <li><a href="index.html">Home</a></li>
            <li> @Model.Post.PostTitle</li>
        </ul>
    </div>
</div>
<!-- breadcrumb_section - end
================================================== -->
<!-- blog_details - start
================================================== -->
<section class="blog_details section_space">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col col-lg-8">
                <div class="details_image">
                    <img src="@Model.Post.PostFaceImage" alt="PC-SHOP-Trang-Tri-May-Tinh-Hai-Phong">
                </div>
                <ul class="post_meta ul_li">
                    <li>@Model.Post.PostCreateDate.Value.ToString("dd/MM/yyyy")</li>

                </ul>
                <h1 class="details_item_title" style="font-weight:700;font-size:28px;">
                    @Model.Post.PostTitle
                </h1>
                @Html.Raw(Model.Post.PostContent)
                <div class="tag_social_wrap">
                    <div class="row align-items-center">
                        <div class="col col-md-7">
                            <ul class="tag_list ul_li">
                                <li><a href="#!">Branding</a></li>
                                <li><a href="#!">UI Design</a></li>
                                <li><a href="#!">Booking</a></li>
                                <li><a href="#!">Statup</a></li>
                                <li><a href="#!">Landing</a></li>
                            </ul>
                        </div>
                        <div class="col col-md-5">
                            <ul class="social_round2 ul_li_right">
                                <li><a href="#!"><i class="fab fa-facebook-f"></i></a></li>
                                <li><a href="#!"><i class="fab fa-twitter"></i></a></li>
                                <li><a href="#!"><i class="fab fa-vimeo-v"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="related_post_area">
                    <h3 class="area_title">Related Posts</h3>
                    <ul class="related_post_wrap ul_li">

                        @foreach (var item in Model.LstRelate)
                        {
                            <li>
                                <div class="recent_post_item">
                                    <a class="item_image" href="@item.URLFriendly">
                                        <img src="@item.PostFaceImage" alt="@item.URLFriendly">
                                    </a>
                                    <div class="item_content">
                                        <h3 class="item_title">
                                            <a href="@item.URLFriendly">
                                                @item.PostTitle
                                            </a>
                                        </h3>
                                        <span class="post_date">@item.PostCreateDate.Value.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col col-lg-4">
                <aside class="sidebar_section">
                 
                    <div class="sb_widget2">
                        <h3 class="sb_widget_title2">BLOG</h3>
                        <ul class="sb_category_list2 ul_li_block">
                            @foreach (var item in Model.LstCate)
                            {
                                <li><a href="/danh-muc/@item.CateURL">@item.CategoryName</a></li>
                            }

                        </ul>
                    </div>
                  
                </aside>
            </div>
        </div>
    </div>
</section>
<!-- blog_details - end
================================================== -->
