
@model List<CMSWebsite.Models.CMS_CateProduct>

<table id="tblCategory" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên danh mục</th>
            <th>Danh mục cha</th>
            <th>Công cụ</th>
        </tr>
    </thead>
    <tbody>
        @if (@Model.Count != 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoyID</td>
                    <td>@item.Name</td>
                    <td>@item.ParentID</td>
                    <td>
                        <a class="cursorPoint"><img src="/Images/cms/icon/edit.png" onclick="editCate(@item.CategoyID,'@item.Name',@item.ParentID,'@item.ImgHomePage')" width="25" height="25" title="Sửa" /></a>&nbsp;
                        <a class="cursorPoint"><img src="/Images/cms/icon/delete.png" onclick="deleteCate(@item.CategoyID)" width="25" height="25" title="Xóa" /></a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#tblCategory').DataTable({
            "paging": true,
            "searching": false,
            "ordering": false,
            "info": false,
            "language": {
                "url": "/font-awesome/Vietnamese.json"
            }
        });
    });
</script>
