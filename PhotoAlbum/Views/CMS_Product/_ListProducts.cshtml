
@model List<CMSWebsite.Models.ProductViewModel>
<table id="dtLstProducts" class="table table-striped table-bordered dt-responsive" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Ảnh</th>
            <th>Mã hàng</th>
            <th>Tên hàng</th>
            <th>Loại hàng</th>
            <th>Giá bán lẻ</th>
            <th>Trạng thái</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img width="50" src="@item.ProductImg" /></td>
                <td>@item.ProductCode</td>
                <td>@item.ProductName</td>
                <td>@item.ProductCateStr</td>
                <td>@item.PriceRetailStr</td>
                <td>@item.Status</td>
                <td>
                    <a href="#" onclick="editProduct(@item.ProductID)" data-toggle="tooltip" data-placement="right" title="" data-original-title="Sửa hàng hóa"><img src="~/Images/cms/icon/edit.png" width="25" /></a> &nbsp;
                    <a href="#" onclick="deleteProduct(@item.ProductID)" data-toggle="tooltip" data-placement="right" title="" data-original-title="Xóa hàng hóa"><img src="~/Images/cms/icon/delete.png" width="25" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>

