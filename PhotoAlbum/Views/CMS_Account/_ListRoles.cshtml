@model List<CMSWebsite.Models.CMS_Role>
<table id="dtLstRole" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>STT</th>
            <th>Tên quyền</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @{

            int i = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.RoleName</td>
                    <td><a href="#" onclick="editRole(@item.RoleID,'@item.RoleName')" data-toggle="tooltip" data-placement="right" title="" data-original-title="Sửa quyền"><img src="~/Images/cms/icon/edit.png" width="25" /></a></td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#dtLstRole').DataTable(normalOptionDataTable);
    });
</script>
